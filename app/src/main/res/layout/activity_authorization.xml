<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment1">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/auth_background2"
        app:srcCompat="@drawable/auth_background2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#4BFFFFFF">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:background="#0000"
                android:scaleType="centerInside"
                android:src="@drawable/left_arrow" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:text="Личный кабинет"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="stylish"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView4"
            android:layout_alignRight="@id/textView4"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="SLOTH"
            android:textColor="@color/black"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/message_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_inputlayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text=""
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/email_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/email_inputlayout"
            android:layout_marginTop="350dp"
            android:fontFamily="@font/montserrat_regular"
            android:paddingLeft="20dp"
            android:text="Электронная почта"
            android:textSize="19sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_inputlayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/email_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"

            android:padding="0sp"
            android:textColorHint="@color/black"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusTopStart="30dp"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textfield_spahe"
                android:fontFamily="@font/montserrat_light"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textSize="19sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/auth_button"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_above="@id/goto_registration"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/montserrat_regular"
            android:text="ВОЙТИ"
            android:textSize="18sp"
            app:backgroundTint="@color/black"
            app:cornerRadius="100dp" />

        <TextView
            android:id="@+id/password_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/password_inputlayout"
            android:layout_alignLeft="@id/password_inputlayout"
            android:fontFamily="@font/montserrat_regular"
            android:paddingLeft="20dp"
            android:text="Пароль"
            android:textSize="19sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_inputlayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="60dp"

            android:layout_below="@id/email_inputlayout"
            android:layout_centerHorizontal="true"
            android:padding="0sp"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusTopStart="30dp"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/textfield_spahe"
                android:fontFamily="@font/montserrat_light"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="19sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/goto_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Зарегистрироваться"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

</FrameLayout>