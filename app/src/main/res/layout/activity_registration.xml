<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegistrationActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/auth_background2" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#4BFFFFFF">

                <ImageButton
                    android:id="@+id/back_to_auth"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:background="#0000"
                    android:scaleType="centerInside"
                    android:src="@drawable/left_arrow" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Создать профиль"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/stylish2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="stylish"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/sloth2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stylish2"
                android:layout_alignRight="@id/stylish2"
                android:fontFamily="@font/montserrat_extrabold"
                android:text="SLOTH"
                android:textColor="@color/black"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/create_account_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/reg_name_inputlayout"
                android:layout_marginTop="220dp"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="20dp"
                android:text="Имя"
                android:textSize="19sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_name_inputlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_below="@id/create_account_textview"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="25dp"
                android:padding="0sp"
                app:boxBackgroundColor="#63000000"
                app:boxCornerRadiusBottomEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxStrokeColor="#AD000000"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp">

                <requestFocus />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_name_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/email_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/reg_email_inputlayout"
                android:layout_alignLeft="@id/reg_email_inputlayout"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="20dp"
                android:text="Электронная почта"
                android:textSize="19sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_email_inputlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_below="@id/reg_name_inputlayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:padding="0sp"
                app:boxBackgroundColor="#63000000"
                app:boxCornerRadiusBottomEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxStrokeColor="#AD000000"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_email_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_regular"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/phone_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/reg_phone_inputlayout"
                android:layout_alignLeft="@id/reg_email_inputlayout"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="20dp"
                android:text="Номер телефона"
                android:textSize="19sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_phone_inputlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_below="@id/reg_email_inputlayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:padding="0sp"
                app:boxBackgroundColor="#63000000"
                app:boxCornerRadiusBottomEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxStrokeColor="#AD000000"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_phone_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_regular"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/password1_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/reg_password1_inputlayout"
                android:layout_alignLeft="@id/reg_email_inputlayout"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="20dp"
                android:text="Пароль"
                android:textSize="19sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_password1_inputlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_below="@id/reg_phone_inputlayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:padding="0sp"
                app:boxBackgroundColor="#63000000"
                app:boxCornerRadiusBottomEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxStrokeColor="#AD000000"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_password1_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_regular"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/password2_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/reg_password2_inputlayout"
                android:layout_alignLeft="@id/reg_email_inputlayout"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="20dp"
                android:text="Повторите пароль"
                android:textSize="19sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reg_password2_inputlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_below="@id/reg_password1_inputlayout"
                android:layout_centerHorizontal="true"
                android:padding="0sp"
                app:boxBackgroundColor="#63000000"
                app:boxCornerRadiusBottomEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxStrokeColor="#AD000000"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_password2_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_regular"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/regis_button"
                android:layout_width="380dp"
                android:layout_height="60dp"

                android:layout_above="@id/textView7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/montserrat_regular"
                android:text="Зарегистрироваться"
                android:textSize="18sp"
                app:backgroundTint="@color/black"
                app:cornerRadius="100dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="У меня уже есть аккаунт"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/message_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_password2_inputlayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/montserrat_regular"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>


</FrameLayout>