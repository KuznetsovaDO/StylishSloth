<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".helper_classes.TypesFragment1">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/viewpager_main1"
        android:layout_width="match_parent"
        android:layout_height="490dp"

        android:layout_marginTop="7dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/main_fragment1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4B000000">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:gravity="center"
                    android:layout_above="@id/typesButton"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:shadowColor="@color/black"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="50"
                    android:text="@string/main_description"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textFontWeight="10"
                    android:textSize="36sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/typesButton"
                    style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                    android:layout_width="330dp"
                    android:layout_height="57dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="150dp"
                    android:backgroundTint="#A3FFFFFF"
                    android:elevation="7dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:shadowColor="@color/black"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="100"
                    android:text="Она может быть разной"
                    android:textColor="@color/black"
                    android:textColorHighlight="#AE000000"
                    android:textColorLink="#AE000000"
                    android:textSize="19sp"
                    app:icon="@drawable/right_arrow"
                    app:iconGravity="end"
                    app:iconTint="#B2000000" />
            </RelativeLayout>

        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>