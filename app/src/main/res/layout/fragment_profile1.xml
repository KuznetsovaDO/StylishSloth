<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileFragment1">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="5dp"
        android:layout_marginRight="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/sloth2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/logo"
        android:layout_alignTop="@id/logo"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="stylish"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_alignRight="@id/textView4"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/montserrat_extrabold"
        android:text="SLOTH"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/left_arrow" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/regis_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/goto_registration"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/montserrat_regular"
        android:text="ВОЙТИ"
        android:textSize="18sp"
        app:backgroundTint="@color/black"
        app:cornerRadius="100dp"
        />

    <EditText
        android:id="@+id/email_inputlayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/password_inputlayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_inputlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/goto_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:textColor="@color/black"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="15dp"/>

</RelativeLayout>