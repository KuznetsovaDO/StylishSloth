<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardView.Selected" parent="@style/CardView">
        <item name="android:strokeWidth">3</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="backgroundColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="StylishSlothButtonStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="fontFamily" >@font/montserrat_regular</item>
        <item name="cornerRadius">30dp</item>
    </style>
</resources>